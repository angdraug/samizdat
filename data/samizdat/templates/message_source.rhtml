<div class="box">
  <div class="box-title"><%= @title %></div>
  <div class="box-content">
    <form action="<%= action_location %>" method="post">
      <div class="label"><label for="f_content"><%= _('Content') %></label></div>
      <textarea name="content" id="f_content" cols="70" rows="20"><%= @message.content.body %></textarea>
    </form>
  </div>
</div>
